<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
">
    <bean id="myGreeter" class="springcourse.GreetingBeanImpl">
        <constructor-arg ref="toBeGreeted"/>
        <property name="greeting" value="Moi"/>
        <property name="addTimestamp" value="true"/>
        <property name="loopCounter" value="3"/>
    </bean>
    
    <bean id="toBeGreeted" class="springcourse.Person"> 
        <property name="name" value="Homer"/>
    </bean> 
    
</beans>

